<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accueil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alice.biblothequevirtuelle.Vue.Accueil"
    android:theme="@style/Theme.AppCompat.Light"
    android:background="#fbf7ed"
    android:paddingTop="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/ivLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/logoappli" />

    <Button
        android:id="@+id/bCollections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bLivres"
        android:layout_marginBottom="2dp"
        android:text="@string/collections"
        tools:background="#82c46c"
        tools:textColor="#533312" />

    <Button
        android:id="@+id/bWishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bCollections"
        android:layout_marginBottom="2dp"
        android:text="@string/Wishlist"
        tools:background="#82c46c"
        tools:textColor="#533312" />

    <Button
        android:id="@+id/button_Rech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="search"
        android:text="Search" />

    <Button
        android:id="@+id/bdeconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bCompte"
        android:text="@string/deconnexion"
        tools:background="#e1ce9a"
        tools:textColor="#533312" />

    <Button
        android:id="@+id/bCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bWishlist"
        android:layout_marginBottom="2dp"
        android:text="@string/compte"
        tools:background="#82c46c"
        tools:textColor="#533312" />

    <Button
        android:id="@+id/bScanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLogo"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="170dp"
        android:onClick="onClickAjouter"
        android:text="@string/scanner"
        tools:background="#82c46c"
        tools:textColor="#533312" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/biblioaccueil"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_below="@+id/ivLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        tools:textColor="#533312" />

    <Button
        android:id="@+id/bLivres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bScanner"
        android:layout_marginBottom="2dp"
        android:onClick="onClickVerif"
        android:text="@string/livres"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:background="#82c46c"
        tools:textColor="#533312" />

</RelativeLayout>
