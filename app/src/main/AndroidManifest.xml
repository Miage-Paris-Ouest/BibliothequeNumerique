<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alice.biblothequevirtuelle">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Appli.BVAppli"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <meta-data
            android:name="DATABASE"
            android:value="bibliotheque.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAINE_PACKAGE_NAME"
            android:value="com.example.alice" />

        <activity android:name=".Vue.Accueil" android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Vue.Ajouter" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Vue.Recherche" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Vue.MesLivres" android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".Vue.Modifier" android:configChanges="orientation|screenSize"></activity>
    </application>

</manifest>